<%- include("partials/header") %>

<div class="row">
    <div class="col-md-12">
        <form class="form-signin" action="/register" method="POST">
            <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>

            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" name="username" class="form-control" placeholder="username" required autofocus>

            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" name="password" class="form-control" placeholder="password" required>

            <label for="email" class="sr-only">E-Mail Address</label>
            <input type="email" name="email" class="form-control" placeholder="email" required>

            <label for="firstName" class="sr-only">First Name</label>
            <input type="text" name="firstName" class="form-control" placeholder="first name">

            <label for="lastName" class="sr-only">Last Name</label>
            <input type="text" name="lastName" class="form-control" placeholder="last name">

            <label for="avatar" class="sr-only">Link to Your Avatar</label>
            <input type="text" name="avatar" class="form-control" placeholder="avatar url">

            <label for="adminPassword" class="sr-only">If You are an Admin</label>
            <input type="password" name="adminPassword" class="form-control" placeholder="admin password">

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
        </form>
        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>