<%- include("../partials/header") %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the UaCamp!</h1>
            <p>View our hand-picked campgrounds from all over Ukraine!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>    
    </header>
    <div class="row text-center">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
                <p>
                    <form action="/campgrounds" class="form-inline mt-2 mt-md-0" method="GET">
                        <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </p>
            <% } %>
        </div>
        <% campground.forEach(function(campground) { %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top" alt="Image of the campground">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.name %></h5>
                      <a href="/campgrounds/<%= campground.slug %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

<%- include("../partials/footer") %>